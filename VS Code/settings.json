{
  /*********************************** SETTINGS *****************************************/
  "editor.insertSpaces": true,
  "editor.fontLigatures": true,
  "editor.tabSize": 4,
  "editor.renderWhitespace": "all",
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "CaskaydiaCove Nerd Font, VictorMono Nerd Font, BlexMono Nerd Font, Mononoki Nerd Font",
  "editor.fontSize": 18,
  "editor.suggest.insertMode": "replace",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.semanticHighlighting.enabled": true,
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.rulers": [
    80
  ],
  "editor.hideCursorInOverviewRuler": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.preview": true,
  "editor.lineNumbers": "on",
  "breadcrumbs.enabled": false,
  "files.autoSave": "afterDelay",
  "workbench.startupEditor": "none",
  "workbench.settings.editor": "json",
  "workbench.layoutControl.enabled": false,
  "window.titleBarStyle": "custom",
  "window.title": "${appName}${separator}${rootName}",
  "window.titleSeparator": " üçÉ ",
  "window.zoomLevel": 0.5,
  "window.menuBarVisibility": "toggle",
  "window.commandCenter": false,
  "security.workspace.trust.untrustedFiles": "open",
  /************************************ LANGUAGES/FILES *********************************/
  // C++
  "[cpp]": {
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "clang-format.executable": "C:\\Program Files\\LLVM\\bin\\clang-format.exe",
  // https://clang.llvm.org/docs/ClangFormatStyleOptions.html#basedonstyle
  "clang-format.style": "{BasedOnStyle: Chromium, IndentWidth: 4, ColumnLimit: 0}",
  "C_Cpp.default.intelliSenseMode": "gcc-x64",
  "C_Cpp.default.compilerPath": "C:\\MinGW\\bin\\g++.exe",
  // html
  "html.autoClosingTags": true,
  "[html]": {
    "editor.tabSize": 2
  },
  // javascript
  "javascript.updateImportsOnFileMove.enabled": "always",
  // typescript
  "[typescript]": {
    "editor.tabSize": 2
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  // css
  "[css]": {
    "editor.tabSize": 2
  },
  // php
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.tabSize": 2
  },
  // json
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  // vue
  "[vue]": {
    "editor.tabSize": 2
  },
  // python
  "[python]": {
    "editor.formatOnPaste": false,
    "editor.formatOnSaveMode": "file",
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  // latex
  "[tex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "latex-workshop.view.pdf.viewer": "external",
  "latex-workshop.view.pdf.external.viewer.command": "C:/Users/lecav/AppData/Local/SumatraPDF/SumatraPDF.exe",
  "latex-workshop.view.pdf.external.viewer.args": [
    "-forward-search",
    "%TEX%",
    "%LINE%",
    "-reuse-instance",
    "-inverse-search",
    "\"C:\\Users\\<Username>\\AppData\\Local\\Programs\\Microsoft VS Code\\Code.exe\" \"C:\\Users\\<U>\\AppData\\Local\\Programs\\Microsoft VS Code\\resources\\app\\out\\cli.js\" --ms-enable-electron-run-as-node -r -g \"%f:%l\"",
    "%PDF%"
  ],
  "latex-workshop.view.pdf.external.synctex.command": "C:/Users/lecav/AppData/Local/SumatraPDF/SumatraPDF.exe",
  "latex-workshop.view.pdf.external.synctex.args": [
    "-forward-search",
    "%TEX%",
    "%LINE%",
    "-reuse-instance",
    "-inverse-search",
    "\"C:\\Users\\<Username>\\AppData\\Local\\Programs\\Microsoft VS Code\\Code.exe\" \"C:\\Users\\<U>\\AppData\\Local\\Programs\\Microsoft VS Code\\resources\\app\\out\\cli.js\" --ms-enable-electron-run-as-node -r -g \"%f:%l\"",
    "%PDF%"
  ],
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "debug.openDebug": "openOnDebugBreak",
  "debug.internalConsoleOptions": "openOnSessionStart",
  /************************************** EXTENSIONS ************************************/
  /* CODESNAP */
  "codesnap.containerPadding": "1em",
  /* TAILWINDCSS */
  "files.associations": {
    "*.css": "tailwindcss",
    "*.scss": "tailwindcss",
    "*.astro": "html"
  },
  /* LIVESERVER */
  "liveServer.settings.donotShowInfoMsg": true,
  /* LIVESHARE */
  "liveshare.connectionMode": "relay",
  /* COLORIZE */
  "colorize.languages": [
    "javascript",
    "css",
    "json"
  ],
  /* GITHUB COPILOT */
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "yaml": true,
    "cpp": false
  },
  /* TABNINE */
  "tabnine.experimentalAutoImports": true,
  /**************************************** TERMINAL ************************************/
  // Terminal Integrada
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font Mono Light",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.defaultLocation": "view",
  "terminal.integrated.defaultProfile.windows": "Pwsh7",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.profiles.windows": {
    "Pwsh7": {
      "source": "PowerShell7",
      "path": "C:\\Users\\lecav\\AppData\\Local\\Microsoft\\WindowsApps\\Microsoft.PowerShell_8wekyb3d8bbwe\\pwsh.exe"
    },
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash",
      "path": "C:\\Program Files\\Git\\bin\\bash.exe"
    }
  },
  // Terminal Externa
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "git.confirmSync": false,
  "git.autofetch": true,
  "workbench.colorTheme": "Catppuccin Macchiato",
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  "workbench.editorAssociations": {
    "*.sql": "default"
  },
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "symbols",
  "symbols.hidesExplorerArrows": false,
}